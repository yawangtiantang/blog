<%- include('./common/header.ejs') %>
<div class="container">
  <h1>文章列表</h1>
  <div class="list-group" style="margin:10px">
    <%articles.forEach(item =>{%>
      <a href="/article/info/<%=item.id%>" class='list-group-item'><%=item.title%>
      <span class='badge' style="background-color: #5cb85c"><%=item.ctime%></span>
      <span class='badge' style="background-color: #f0ad4e"><%=item.nickname%></span>
      </a>
   <% })%>
    
  </div>
<!-- 分页区域 -->
<ul class="pagination list-group">
  <li class="<%= nowPage-1 ===0 ? 'disabled' : "" %>">
    <<%= nowPage-1 ===0 ? 'span' : 'a' %> href="?page=<%=nowPage - 1 < 1 ? 1 : nowPage - 1%>" aria-label="previous">
        <span aria-hidden="true">&laquo;</span>
    </<%= nowPage-1 ===0 ? 'span' : 'a' %>>
    
  </li>
  <% for(var i =0; i<totalPage;i++){%>
   <li class="<%= nowPage === i+1 ? 'active' : "" %>"><a href="?page=<%=i+1%>"><%=i+1 %></a></li>
  <%}%>
   <li class="<%= nowPage+1 >totalPage ? 'disabled' : "" %>">
      <<%= nowPage+1 >totalPage ? 'span' : 'a' %> href="?page=<%=nowPage +1 > totalPage ? totalPage : nowPage+1%>" aria-label="previous">
          <span aria-hidden="true">&laquo;</span>
      </<%= nowPage+1 >totalPage ? 'span' : 'a' %>>
      
   </li>
</ul>
</div>
<%- include('./common/footer.ejs') %>