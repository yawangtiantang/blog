<%- include('./common/header.ejs') %>
<div class="container">
  <h1>文章列表</h1>
  <div class="list-group" style="margin:10px">
    <%articles.forEach(item =>{%>
      <a href="/article/info/<%=item.id%>" class='list-group-item'><%=item.title%>
      <span class='badge' style="background-color: #5cb85c"><%=item.ctime%></span>
      <span class='badge' style="background-color: #f0ad4e"><%=item.nickname%></span>
      </a>
   <% })%>
    
  </div>
<!-- 分页区域 -->
<ul class="pagination list-group">
  <li>
    <a href="#" aria-label="previous">
        <span aria-hidden="true">&laquo;</span>
    </a>
    
  </li>
  <% for(var i =1; i<totalPage;i++){%>
   <li class="<%= nowPage === i ? 'active' : "" %>"><a href="#"><%=i%></a></li>
  <%}%>
   <li>
      <a href="#" aria-label="previous">
          <span aria-hidden="true">&laquo;</span>
      </a>
      
   </li>
</ul>
</div>
<%- include('./common/footer.ejs') %>